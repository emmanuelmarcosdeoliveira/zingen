<style lang="scss" is:global>
  @use "../styles/main.scss" as var;
	html,body {
		height: 100%;
		margin: 0;
		width: 100%;
    font-family: var(--ff-sans);
    font-weight: var(--fw-base);
    font-size:    var(--fs-base);
    line-height: 1.6;
    color: var(--text-color-primary);
    background-color: var(--bg-color);
	}
*,*::before,*::after {
  box-sizing: border-box;
}
* {
  margin: 0;
  padding: 0;
  font: inherit;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
:root {
  --bg-color: #09090b;
  --surface-color: #18181b;
  --stroke-color: #27272a;
  --text-color-secondary: #a1a1aa;
  --text-color-primary: #f4f4f5;
  --brand-color-primary: #f7b733;
  --brand-color-secondary: #fc4a1a;
  --ff-sans: "Inter", system-ui, sans-serif;

  --fw-base: 400;
  --fw-med: 500;
  --fw-bold: 800;

  --fs-sm: 0.875rem;
  --fs-base: 1rem;
  --fs-lg: 1.25rem;
  --fs-xl: 1.5rem;
  --fs-2xl: 2.5rem;
  --px-lg: 1.5rem;

  --py-base: 1rem;
  --py-lg: 1.5rem;
  --py-xl: 3rem;
}
:root {
  --bg-color: #09090b;
  --surface-color: #18181b;
  --stoke-color: #27272A
}
h1, h2 , h3 {
  line-height: 1.2;
  color: var(--text-color-primary);
  font-weight: var(--fw-bold);
  letter-spacing: -0.04em;
}
h1 {
  font-size: var(--fs-2xl); 
}
h2 {
  font-size: var(--fs-xl);
}
h3 {
  font-size: var(--fs-lg);
}
@media (width >= 80em) {
  :root {
    --fs-lg: 2rem;
    --fs-xl: 3rem;
    --fs-2xl: 4rem;
    --px-lg: 2rem;
    --py-base: 1.5rem;
    --py-lg: 2.5rem;
    --py-xl: 5rem;
  }
}
a {
  text-decoration: none;
  color: inherit;
}
 ul[role="list"] {
   list-style: none;
 }
 .container {
  --max-width: 375px;
  margin-inline: auto;
  width: min(var(--max-width), 100% - var(--px-lg) * 2);
  border: 1px solid violet;
 }
 .desktop-only {
  display: none;
 }
 .even-columns {
  display: grid;
  gap: 1rem;
 }


 @media (width >= 80em) {
  .container {
    --max-width: 80rem;
  }
  .desktop-only {
  display: initial;
 }
 .even-columns {
  grid-auto-flow: column;
  grid-auto-columns: 1fr;
 }

 }
 .py-base {
  padding-block: var(--py-base);
 }
 .py-lg {
  padding-block: var(--py-lg);
 }
 .py-xl {
  padding-block: var(--py-xl);
 }
 .px-lg {
  padding-inline: var(--px-lg);
 }
 
 
</style>
